{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Fixture Collection",
  "description": "Describes a fixture collection",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the collection"
    },
    "universe": {
      "type": "string",
      "description": "The name of the universe to which this fixture will belong"
    },
    "fixtures": {
      "type": "array",
      "description": "A list of fixtures for this collection",
      "items": {
        "type": "object",
        "properties": {
          "channel": {
            "description": "The channel assigned to the fixture",
            "type": "number"
          },
          "type": {
            "description": "The model name of the fixture",
            "type": "string"
          },
          "group": {
            "description": "The group the fixture is assigned to",
            "type": "string"
          },
          "options": {
            "description": "Options",
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": [ "channel", "group", "options", "type" ],
        "additionalProperties": false
      }
    }
  },
  "required": [ "name", "universe", "fixtures" ],
  "additionalProperties": false
}
