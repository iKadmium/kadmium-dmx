@{
}
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                @foreach(var inputElement in Model.Items)
                {
                    <th>@inputElement.Label</th>
                }
                <th>Delete</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: universes">
            <tr>
                <td><input class="form-control" data-bind="value: name"></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-success collection-add" id="@Model.ID-add" data-collection-id="@Model.ID" type="button"><span class="glyphicon glyphicon-plus"></span></button>
</div>