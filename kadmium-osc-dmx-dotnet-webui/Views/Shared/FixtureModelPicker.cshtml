<binding-context>
    <modal-window id="modal-fixture-select">
        <modal-header>Select fixture model</modal-header>
        <modal-body>
            <div class="form-horizontal" data-bind="with: fixtureModelPicker">
                <div class="form-group">
                    <label class="control-label col-sm-3">Manufacturer</label>
                    <select class="form-control" data-bind="value: selectedManufacturer, options: manufacturers, optionsText: 'name'"></select>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Model</label>
                    <select class="form-control" data-bind="value: selectedModel, options: selectedManufacturer().models"></select>
                </div>
            </div>
        </modal-body>
        <modal-footer><button class="btn btn-success" data-bind="click: selectModel">OK</button></modal-footer>
    </modal-window>
</binding-context>