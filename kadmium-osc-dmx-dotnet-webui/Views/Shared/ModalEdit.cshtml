@{
}
<div class="modal fade bs-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Editing <span class="item-id">insert id</span>
            </div>
            
            <div class="modal-body">
                <div id="modal-status">
                    <div id="modal-status-text" class="text-center">Loading...</div>
                    <div class="progress progress-striped active">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                    </div>
                </div>
                <div id="modal-success">
                    <div class="alert alert-success" id="modal-success-container">
                        <h2 id="modal-success-text">Summary</h2>
                    </div>
                </div>
                <div id="modal-error">
                    <div class="alert alert-danger" id="modal-failure-container">
                        <h2 id="modal-error-text">Summary</h2>
                    </div>
                </div>
                <form data-toggle="validator">
                    <div class="form-horizontal" id="edit-form">
                        @foreach (var input in Model)
                        {
                            if (input is VisibleInputElement)
                            {
                                @Html.Partial("InputLabel", input);
                            }
                            else
                            {
                                @Html.Partial(input.ViewName, input);
                            }
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div id="footer-buttons" class="form-group">
                    <button type="button" class="btn btn-default" id="modal-back">Back</button>
                    <button type="button" class="btn btn-success btn-ok" id="modal-submit">Save</button>
                    <button type="button" class="btn btn-default" id="modal-cancel" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>