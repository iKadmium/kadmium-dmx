@{
}

<div class="modal fade bs-example-modal-lg" id="@Model.ID-edit" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Editing @Model.Label
            </div>

            <div class="modal-body">
                <form data-toggle="validator" class="clearfix">
                    @foreach (var input in @Model.Items)
                    {
                        if (input is VisibleInputElement)
                        {
                            @Html.Partial("InputLabel", input);
                        }
                        else
                        {
                            @Html.Partial(input.ViewName, input);
                        }
                    }
                </form>
            </div>
            <div class="modal-footer">
                <div id="footer-buttons">
                    <button type="button" class="btn btn-success btn-ok" id="@Model.ID-submit">Save</button>
                    <button type="button" class="btn btn-default" id="@Model.ID-cancel" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>