<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - kadmium-osc-dmx</title>

    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/ko.plus.css" />
    </environment>
</head>
<body>
    @Html.Partial("Navbar")
    <div class="container body-content">
        <h2>@ViewData["Title"]</h2>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - Jesse Higginson</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/require.js"></script>
        <script>
            require.config({
                shim: {
                    "bootstrap": { "deps": ["jquery"] },
                    "knockout-sortablejs": {"deps": ["Sortable"]},
                    "Controllers/Groups/Groups": { "deps": ["knockout-sortablejs"] }
                },
                baseUrl: "/js/Debug",
                paths: {
                    "knockout": "/lib/knockout-latest",
                    "knockout.validation": "/lib/knockout.validation",
                    "ko.plus": "/lib/ko.plus",
                    "jquery": "/lib/jquery/jquery",
                    "bootstrap": "/lib/bootstrap/js/bootstrap",
                    "Sortable": "/lib/Sortable/Sortable",
                    "knockout-sortablejs": "/lib/knockout-sortable"
                }
            });
            require(["jquery", "bootstrap"]);
        </script>
    </environment>
    <environment names="Staging,Production">

    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
