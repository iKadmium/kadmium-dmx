@using kadmium_osc_dmx_dotnet_core
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Raw DMX";
}

<div class="form-group">
    <label class="control-label col-sm-3" for="universe">Universe</label>
    <select id="universe" class="form-control">
        @foreach(string universeName in MasterController.Instance.Universes.Keys)
        {
            <option>@universeName</option>
        }
    </select>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Channel</th>
            <th>Value</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody id="channels-body">
        @for (int i = 1; i <= 512; i++)
        {
            <tr data-channel="@i">
                <td>@i</td>
                <td><input class="form-control" type="range" min="0" max="255" value="0"></td>
                <td><input class="form-control" type="number" min="0" max="255" value="0"></td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/RawDMX.js"></script>