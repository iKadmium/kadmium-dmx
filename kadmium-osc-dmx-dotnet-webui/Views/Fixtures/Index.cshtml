@using kadmium_osc_dmx_dotnet_webui.ViewHelpers
@using kadmium_osc_dmx_dotnet_core.Fixtures
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_ListLayout.cshtml";
    ViewData["Title"] = "Fixture Definitions";
}

<div class="modal fade bs-example-modal-lg" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                Editing <span class="item-id">insert id</span>
            </div>
            <div class="modal-body">
                <div class="form-horizontal" id="edit-form">
                    @Html.Partial("InputLabel", new InputText("name", "Name:"))
                    @Html.Partial("InputLabel", new InputSelect("type", "Type:", Enum.GetNames(typeof(FixtureType)).ToDictionary(x => x)))
                    @Html.Partial("InputDataList", new InputDataList("channel-names", 
                        "Master", "Red", "Green", "Blue", "White", "UV", "Strobe", "PanCoarse", "PanFine", "TiltCoarse", "TiltFine" ))
                    @Html.Partial("InputLabel", new InputCollection("channels", "Channels:",
                        new InputList("name", "Name", "channel-names"),
                        new InputNumber("dmx", "DMX", 1, 512, 1),
                        new InputNumber("min", "Min", 0, 255, 0),
                        new InputNumber("max", "Max", 0, 255, 255)
                    ))
                    @Html.Partial("InputDataList", new InputDataList("movement-names", "Pan", "Tilt"))
                    @Html.Partial("InputLabel", new InputCollection("movements", "Movements:",
                        new InputList("name", "Name", "movement-names"),
                        new InputNumber("min", "Min", -540, 540),
                        new InputNumber("max", "Max", -540, 540)
                    ))
                </div>
            </div>
            <div class="modal-footer">
                <div id="footer-status">
                    <div id="footer-status-text" class="text-center">Loading...</div>
                    <div class="progress progress-striped active">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
                    </div>
                </div>
                <div id="footer-buttons">
                    <button type="button" class="btn btn-success btn-ok" id="modal-submit" disabled>Save</button>
                    <button type="button" class="btn btn-default" id="modal-cancel" data-dismiss="modal" disabled>Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/ModalEditor.js"></script>
<script src="~/js/FixtureEdit.js"></script>