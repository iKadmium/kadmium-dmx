@using kadmium_osc_dmx_dotnet_webui.ViewHelpers
@using kadmium_osc_dmx_dotnet_core.Fixtures
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_ListLayout.cshtml";
    ViewData["Title"] = "Fixture Definitions";

    var inputs = new InputElement[]
    {
        new InputText("name", "Name:"),
        new InputSelect("type", "Type:", Enum.GetNames(typeof(FixtureType)).ToDictionary(x => x)),
        new InputDataList("channel-names", "Master", "Red", "Green", "Blue", "White", "UV", "Strobe", "PanCoarse", "PanFine", "TiltCoarse", "TiltFine" ),
        new InputCollection("channels", "Channels:",
            new InputList("name", "Name", "channel-names"),
            new InputNumber("dmx", "DMX", 1, 512, 1),
            new InputNumber("min", "Min", 0, 255, 0),
            new InputNumber("max", "Max", 0, 255, 255)
        ),
        new InputDataList("movement-names", "Pan", "Tilt"),
        new InputCollection("movements", "Movements:",
            new InputList("name", "Name", "movement-names"),
            new InputNumber("min", "Min", -540, 540),
            new InputNumber("max", "Max", -540, 540)
        )
    };
}

@Html.Partial("ModalEdit", inputs)

<script src="~/js/FixtureEdit.js"></script>