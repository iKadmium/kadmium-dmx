{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "scripts/bin",
    "types": ["jquery", "knockout", "knockout.mapping"]
  },
  "include": [
    "node_modules/knockout",
    "node_modules/knockout-mapping",
    "scripts/ts"
  ],
  "exclude": [
    "node_modules/typescript",
    "wwwroot"
  ]
}
