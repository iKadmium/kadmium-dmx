<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema elementFormDefault="qualified"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:complexType name="color">
        <xsd:attribute name="rgb" type="xsd:string" />
        <xsd:attribute name="min" type="xsd:int" />
        <xsd:attribute name="max" type="xsd:int" />
    </xsd:complexType>

    <xsd:complexType name="fixture">
        <xsd:sequence>
            <xsd:element name="color" type="color" minOccurs="0" maxOccurs="unbounded" />
        </xsd:sequence>
        <xsd:attribute name="id" type="xsd:string" />
    </xsd:complexType>

    <xsd:complexType name="colorwheels">
        <xsd:sequence>
            <xsd:element name="fixture" type="fixture" minOccurs="0"
                         maxOccurs="unbounded"></xsd:element>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:element name="colorwheels" type="colorwheels">
        <xsd:unique name="FixtureIDKey">
            <xsd:selector xpath="fixture" />
            <xsd:field xpath="@id" />
        </xsd:unique>
    </xsd:element>
</xsd:schema>