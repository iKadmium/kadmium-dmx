{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Transmitters",
  "description": "A list of transmitters",
  "type": "array",
  "items": {
    "type": "object",
    "allOf": [
      {
        "$ref": "#/definitions/transmitterCommon"
      }
    ],
    "anyOf": [
      {
        "$ref": "#/definitions/sacn"
      }
    ]
  },
  "definitions": {
    "transmitterCommon": {
      "properties": {
        "name": {
          "description": "The unique name of this transmitter",
          "type": "string"
        },
        "delay": {
          "description": "Time to delay transmissions, in ms",
          "type": "integer",
          "default": 0
        }
      }
    },
    "sacn": {
      "properties": {
        "type": {
          "enum": [
            "sACN"
          ]
        },
        "description": {
          "description": "The name to send to sACN listeners",
          "type": "string"
        },
        "multicast": {
          "description": "Whether to send to multicast subscribers",
          "type": "boolean"
        },
        "unicast": {
          "description": "Unicast receivers to send to",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}