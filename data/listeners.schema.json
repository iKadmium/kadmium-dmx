{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Listeners",
  "description": "A list of listeners",
  "type": "array",
  "items": {
    "type": "object",
    "oneOf": [{"$ref": "#/definitions/oscListener"}]
  },
  "definitions": {
    "oscListener": {
      "properties": {
        "type": {
          "enum": [ "OSC" ],
          "type": "string"
        },
        "name": {
          "description": "The unique name of the listener",
          "type": "string"
        },
        "port": {
          "description": "The port on which the listener listens",
          "type": "integer"
        }
      }
    }
  }
}
