{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Groups",
	"description": "List of group names",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"name": {
				"type": "string",
				"description": "The name of the group"
			},
			"order": {
				"type": "integer",
				"description": "The order in which the group should appear"
			}
		}
	}
}