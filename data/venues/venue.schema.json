{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Venue",
  "description": "Describes a venue",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the venue"
    },
    "universes": {
      "type": "array",
      "description": "A list of universes for this venue",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of this universe",
            "type": "string"
          },
          "transmitters": {
            "type": "array",
            "description": "The transmitters this universe should send to",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "The name of the transmitter",
                  "type": "string"
                },
                "universeID": {
                  "description": "The universe number the transmitter should send to",
                  "type": "integer"
                }
              }
            },
            "required": [
              "name",
              "universeID"
            ],
            "additionalProperties": false
          },
          "fixtures": {
            "type": "array",
            "description": "A list of fixtures for this collection",
            "items": {
              "type": "object",
              "properties": {
                "channel": {
                  "description": "The channel assigned to the fixture",
                  "type": "number"
                },
                "type": {
                  "description": "The model name of the fixture",
                  "type": "string"
                },
                "group": {
                  "description": "The group the fixture is assigned to",
                  "type": "string"
                },
                "options": {
                  "description": "Options",
                  "type": "object",
                  "properties": {
                    "axisInversions": {
                      "type": "array",
                      "description": "Movement axis to be inverted",
                      "items": {
                        "type": "string"
                      }
                    },
                    "axisRestrictions": {
                      "type": "array",
                      "description": "Movement axis to be restricted",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "description": "The name of the axis to be restricted"
                          },
                          "min": {
                            "type": "integer",
                            "description": "The minimum value, in degrees"
                          },
                          "max": {
                            "type": "integer",
                            "description": "The minimum value, in degrees"
                          }
                        },
                        "required": [
                          "name",
                          "min",
                          "max"
                        ],
                        "additionalProperties": false
                      }
                    }
                  }
                }
              },
              "required": [
                "channel",
                "group",
                "options",
                "type"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "fixtures",
          "name"
        ],
        "additionalProperties": false
      }
    }
  }
}